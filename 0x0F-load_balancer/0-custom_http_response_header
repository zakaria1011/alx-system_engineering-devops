#!/bin/bash

# Install Nginx if not already installed
sudo apt-get update
sudo apt-get install -y nginx

# Get the hostname of the server
hostname=$(hostname)

# Create Nginx configuration file for custom header
echo "add_header X-Served-By $hostname;" | sudo tee /etc/nginx/sites-available/custom_header > /dev/null

# Create a symbolic link to enable the custom header configuration
sudo ln -s /etc/nginx/sites-available/custom_header /etc/nginx/sites-enabled/

# Restart Nginx to apply the changes
sudo systemctl restart nginx
