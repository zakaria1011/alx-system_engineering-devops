#!usr/bin/env bash

# Function to display information about a subdomain
display_info() {
    domain=$1
    subdomain=$2

    # Use dig to get information about the subdomain
    result=$(dig $subdomain.$domain | grep -A1 'ANSWER SECTION:')

    # Extract the record type and destination IP from the result using awk
    record_type=$(echo "$result" | awk '/IN\s+[A-Z]+/ {print $4}')
    destination=$(echo "$result" | awk '/[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+/ {print $5}')

    # Display the information
    echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

# Main script
domain=$1
subdomain=$2

# Check if subdomain is provided, if not, set default subdomains
if [ -z "$subdomain" ]; then
    subdomains=("www" "lb-01" "web-01" "web-02")
else
    subdomains=($subdomain)
fi

# Loop through the subdomains and display information
for sub in "${subdomains[@]}"; do
    display_info $domain $sub
done
