# /etc/haproxy/haproxy.cfg

global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend www-frontend
    bind *:443 ssl crt /etc/letsencrypt/live/www.zakariagrari.tech/fullchain.pem

    reqadd X-Forwarded-Proto:\ https

    acl is_holberton path -i /
    use_backend holberton-backend if is_holberton

backend holberton-backend
    mode http
    server server1 107.23.119.223:80 check
    server server2 54.89.118.36:80 check

